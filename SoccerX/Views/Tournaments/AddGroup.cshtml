
@model SoccerX.Models.GroupViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Agregando...</h4>

<h4>Grupo al Torneo: @Model.Tournament.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGroup" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TournamentId" />

            <partial name="_Group" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.TournamentId" class="btn btn-success">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


